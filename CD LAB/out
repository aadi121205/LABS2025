


#include <iostream>
#include <fstream>
#include <string>
using namespace std;

int main()
{
    string filename, line;
    int lineCount = 0, spaceCount = 0;

    cout << "Enter filename: ";
    cin >> filename;

    ifstream file(filename);

    if (!file)
    {
        cerr << "Error: Could not open file " << filename << endl;
        return 1;
    }

    while (getline(file, line))
    {
        lineCount++;
        for (char ch : line)
        {
            if (ch == ' ')
            {
                spaceCount++;
            }
        }
    }

    file.close();

    cout << "Number of lines: " << lineCount << endl;
    cout << "Number of spaces: " << spaceCount << endl;

    return 0;
}
